<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SlayGPT</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>

<body>
    <label class="switch">
        <input type="checkbox" onclick="switchMode()" id="mode">
        <span class="slider round">
          <span class="switchIcon left material-symbols-outlined">chat</span>
          <span class="switchIcon right material-symbols-outlined">book_4_spark</span>
        </span>
    </label>                               
    <span id="theme" class="material-symbols-outlined">
        dark_mode
    </span>
    <div id="chatArea">
        <% if (locals.messages) { %>
            <% for( let index = 0; index < locals.messages.length; index++ ) { %>
                <div class="message">
                    <% if (locals.messages[index].getSender() == "system") { %>
                        <div class="icon">
                           <span class="material-symbols-outlined">
                               psychology
                           </span>
                        </div>
                        <!-- Use <pre> to preserve line breaks in system messages -->
                        <pre><%= messages[index].getMessage() %></pre>
                    <% } else { %>
                        <p><%= messages[index].getMessage() %></p>
                        <div class="icon">
                            <span class="material-symbols-outlined">
                                face
                            </span>
                        </div>
                    <% } %>
                </div>
            <% } %>
        <% } else { %>
            <div class="message">
                <p>Enter a message below to start chatting</p>
                <div class="icon">
                    <span class="material-symbols-outlined">
                        psychology
                    </span>
                </div>
            </div>
        <% } %>
    </div>
    <div id="input">
        <form action="/gen" method="post" id="formContainer">
            <input type="text" name="prompt" id="promt" placeholder="Tell me a story about a powerful witch...">
            <button type="submit">
                <span class="material-symbols-outlined">
                    arrow_upward
                </span>
            </button>
        </form>
    </div>

    <script src="app.js"></script>
</body>

</html>